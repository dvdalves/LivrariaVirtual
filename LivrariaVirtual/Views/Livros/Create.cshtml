@model LivrariaVirtual.Business.ViewModels.LivroViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="card-title">Livros</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Livros</a></li>
                    <li class="breadcrumb-item active">Criar</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Cadastro</h3>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Titulo" class="control-label">Título</label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Genero" class="control-label">Gênero</label>
                            <input asp-for="Genero" class="form-control" />
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Data" class="control-label">Data</label>
                            <input asp-for="Data" type="date" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Autor" class="control-label">Autor</label>
                            <input asp-for="Autor" class="form-control" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco" class="control-label">Preço</label>
                            <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Idioma" class="control-label">Idioma</label>
                            <input asp-for="Idioma" class="form-control" />
                            <span asp-validation-for="Idioma" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary" asp-action="Index"><span class="fa fa-arrow-alt-circle-left"></span></a>
                <button type="submit" class="btn btn-success">Salvar</button>
            </div>
        </form>
    </div>
</div>